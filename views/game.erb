<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ゲーム画面</title>
  <% if osano_client_id && !osano_client_id.empty? %>
    <script async src="https://cmp.osano.com/AzZd.../osano.js" data-client-id="<%= osano_client_id %>"></script>
  <% end %>
  <style>
    body { 
      font-family: sans-serif; 
      text-align: center; 
      margin: 0; 
      height: 100vh; 
      background-color: #E6E6FA; /* 薄紫色 */
      display: flex; 
      flex-direction: column; 
      justify-content: center; 
      align-items: center; 
    }
    h2 { margin-bottom: 20px; font-size: 20px; }
    #boxes { 
      display: grid; 
      grid-template-columns: repeat(2, 1fr); 
      gap: 10px; 
      max-width: 152px; /* 2cm x 2 = 76px x 2 + gap */
    }
    .box { 
      width: 76px; /* 約2cm */
      height: 76px; /* 約2cm */
      background: white; 
      display: flex; 
      align-items: center; 
      justify-content: center; 
      font-size: 28px; 
      color: #8B4513; /* 茶色 */
      border: 1px solid #ccc; 
      box-sizing: border-box; 
      cursor: pointer; 
    }
    #message { 
      font-size: 40px; 
      color: red; 
      margin-top: 20px; 
    }
    #retry-button {
      margin-top: 18px; /* 0.5mm上に調整 */
      padding: 10px 20px;
      font-size: 18px;
      background-color: #4CAF50; /* 緑色 */
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      display: none; /* 初期非表示 */
    }
    #retry-button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <h2>「や・き・い・も」を順番にタップ！（3秒以内）</h2>
  <div id="boxes"></div>
  <p id="message"></p>
  <button id="retry-button">やり直し</button>

  <script>
    const chars = ['や', 'き', 'い', 'も'];
    const correctOrder = ['や', 'き', 'い', 'も'];
    let shuffled = [];
    let currentIndex = 0;
    let cycleCount = 0;
    let timer;
    let gameActive = true;

    // ピコーン音を再生
    function playSuccessSound() {
      const audio = new Audio('/audio/pico.mp3');
      console.log('Attempting to load success sound from:', audio.src);
      audio.play().catch(error => console.error('Success sound play failed:', error));
    }

    // ブッブー音を再生
    function playFailSound() {
      const audio = new Audio('https://www.soundjay.com/buttons/beep-05.mp3');
      console.log('Attempting to load fail sound from:', audio.src);
      audio.play().catch(error => console.error('Fail sound play failed:', error));
    }

    function shuffleArray(array) {
      return array.sort(() => Math.random() - 0.5);
    }

    function initBoxes() {
      if (!gameActive) return;
      shuffled = shuffleArray([...chars]);
      const boxes = document.getElementById('boxes');
      boxes.innerHTML = '';
      currentIndex = 0;
      shuffled.forEach(char => {
        const box = document.createElement('div');
        box.className = 'box';
        box.textContent = char;
        box.addEventListener('click', () => handleTap(char));
        boxes.appendChild(box);
      });
      startTimer();
      console.log(`Set ${cycleCount + 1} started`);
    }

    function startTimer() {
      if (!gameActive) return;
      clearTimeout(timer);
      timer = setTimeout(() => showLose(), 3000);
    }

    function handleTap(tappedChar) {
      if (!gameActive) return;
      if (tappedChar === correctOrder[currentIndex]) {
        currentIndex++;
        console.log(`Tapped: ${tappedChar}, Index: ${currentIndex}`);
        if (currentIndex === 4) {
          clearTimeout(timer);
          playSuccessSound();
          currentIndex = 0;
          cycleCount++;
          console.log(`Cycle completed: ${cycleCount}/5`);
          if (cycleCount === 5) {
            setTimeout(() => location.href = '/success', 1000);
          } else {
            initBoxes();
          }
        }
      } else {
        showLose();
      }
    }

    function showLose() {
      if (!gameActive) return;
      clearTimeout(timer);
      gameActive = false;
      playFailSound();
      const message = document.getElementById('message');
      const retryButton = document.getElementById('retry-button');
      if (message && retryButton) {
        message.textContent = 'You lose（失敗）';
        retryButton.style.display = 'block';
        console.log('Game over: You lose, retry button displayed');
      } else {
        console.error('Error: message or retry-button element not found');
      }
    }

    // やり直しボタンのイベントリスナー
    document.getElementById('retry-button').addEventListener('click', () => {
      location.href = '/game';
    });

    initBoxes();
  </script>
</body>
</html>